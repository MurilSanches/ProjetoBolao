@{
    Layout = "~/Views/Shared/_Apostas.cshtml";
    double porcentagemA = 0, porcentagemB = 0, porcentagemEmpate = 0;
}

<section id="apostas">
    <div class="container">
        <div id="main-col">
            <h1>Todos os jogos</h1>
        </div>
        @foreach (ProjetoBolao.Models.Jogo j in ViewBag.Jogos)
        {
            if (j.Ocorreu == 1)
            {
                continue;
            }

            List<ProjetoBolao.Models.Votacao> votos = new List<ProjetoBolao.Models.Votacao>();
            ProjetoBolao.Models.Usuario u = (ProjetoBolao.Models.Usuario)Session["UsuarioLogado"];
            ProjetoBolao.Models.Votacao vot = null;
            ProjetoBolao.Models.Time timeA = ProjetoBolao.DAO.TimeDAO.Time(j.CodTimeA);
            ProjetoBolao.Models.Time timeB = ProjetoBolao.DAO.TimeDAO.Time(j.CodTimeB);

            double qtdA = 0;
            double qtdB = 0;
            double qtdEmpate = 0;


            if (ViewBag.Votos != null)
            {
                foreach (ProjetoBolao.Models.Votacao v in ViewBag.Votos)
                {
                    if (v.CodJogo == j.Id)
                    {
                        vot = v;
                    }

                }
                foreach (ProjetoBolao.Models.Votacao v in ViewBag.TodosOsVotos)
                {
                    if (v.CodJogo == j.Id)
                    {
                        votos.Add(v);
                    }
                }

                foreach (ProjetoBolao.Models.Votacao v in votos)
                {
                    if (v.CodTimeVotado == timeA.Id)
                    {
                        qtdA++;
                    }
                    else
                    {
                        if (v.CodTimeVotado == timeB.Id)
                        {
                            qtdB++;
                        }
                        else
                        {
                            qtdEmpate++;
                        }
                    }
                }

                porcentagemA = Math.Round((qtdA / double.Parse(votos.Count() + "") * 100));
                porcentagemB = Math.Round((qtdB / double.Parse(votos.Count() + "") * 100));
                porcentagemEmpate = Math.Round((qtdEmpate / double.Parse(votos.Count() + "") * 100));


            }


            <form action="/Apostas/Votar">
                <div class="container-fluid">
                    <input type="hidden" name="v.CodJogo" value="@j.Id">
                    <ul>
                        <li>
                            <div class="card-group">
                                <!-- Card 1 -->
                                <div class="card">
                                    <div class="card-header">@timeA.NomeTime</div>
                                    <div class="card-body">
                                        <img src="@timeA.Foto" alt="Photo of sunset">
                                    </div>
                                </div>
                                <!-- Card 2 -->
                                <div class="card">
                                    <div class="card-header">@timeB.NomeTime</div>
                                    <div class="card-body ">
                                        <img src="@timeB.Foto" alt="Photo of sunset">
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li>
                            <br />
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    @if (vot != null)
                                    {

                                        if (vot.CodTimeVotado == timeA.Id)
                                        {

                                            <button type="submit" href="#" name="v.CodTimeVotado" value="@timeA.Id" disabled class="btn btn-block btn-primary">Vitoria do @timeA.NomeTime&#10003;</button>
                                        }
                                        else
                                        {
                                            <button type="submit" href="#" name="v.CodTimeVotado" value="@timeA.Id" disabled class="btn btn-block btn-primary">Vitoria do @timeA.NomeTime</button>
                                        }
                                    }
                                    else
                                    {
                                        <button type="submit" id="Votar" name="v.CodTimeVotado" class="btn btn-primary btn-block" value="@timeA.Id">Vitoria do @timeA.NomeTime</button>

                                    }
                                </div>
                                <div class="form-group col-md-4">
                                    @if (vot != null)
                                    {
                                        if (vot.CodTimeVotado == 0)
                                        {
                                            <button type="submit" href="#" name="v.CodTimeVotado" disabled value="0" class="btn btn-block btn-danger">Empate &#10003;</button>
                                        }
                                        else
                                        {
                                            <button type="submit" href="#" name="v.CodTimeVotado" disabled value="0" class="btn btn-block btn-danger">Empate</button>
                                        }
                                    }
                                    else
                                    {
                                        <button type="submit" id="Votar" name="v.CodTimeVotado" href="#" class="btn btn-block btn-danger" value="0">Empate</button>

                                    }
                                </div>
                                <div class="form-group col-md-4">
                                    @if (vot != null)
                                    {
                                        if (vot.CodTimeVotado == timeB.Id)
                                        {
                                            <button type="submit" href="#" name="v.CodTimeVotado" disabled value="@timeB.Id" class="btn btn-block btn-primary">Vitoria do @timeB.NomeTime &#10003;</button>
                                        }
                                        else
                                        {
                                            <button type="submit" href="#" name="v.CodTimeVotado" disabled value="@timeB.Id" class="btn btn-block btn-primary">Vitoria do @timeB.NomeTime</button>
                                        }
                                    }
                                    else
                                    {
                                        <button type="submit" id="Votar" name="v.CodTimeVotado" href="#" class="btn btn-primary btn-block" value="@timeB.Id">Vitoria do @timeB.NomeTime</button>

                                    }
                                </div>
                            </div>
                            <br />
                            @if(vot != null)
                             {
                                
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar progress-bar-success" role="progressbar" style="width:@porcentagemA%" aria-valuemin="0" aria-valuemax="100">
                                        @porcentagemA%
                                    </div>
                                    <div class="progress-bar progress-bar-danger" role="progressbar" style="width:@porcentagemEmpate%" aria-valuemin="0" aria-valuemax="100">
                                        @porcentagemEmpate%
                                    </div>
                                    <div class="progress-bar progress-bar-warning" role="progressbar" style="width:@porcentagemB%" aria-valuemin="0" aria-valuemax="100">
                                        @porcentagemB%
                                    </div>
                                </div><br />
                            }
                        </li>
                    </ul>
                    <br />
                    <br />
                    <br />
                </div>
            </form>
        }
    </div>
</section>

<script>



</script>