@{
    Layout = "~/Views/Shared/_Perfil.cshtml";

    ProjetoBolao.Models.Usuario userSelected = null;
}

<section id="admin">
    <div class="container">
        <br />
        <h1>Alterando usuario.....</h1>
        <a class="nav-link" href="/Admin">&#8630; Voltar</a>
        <br /><br />
        <select class="custom-select my-1 mr-sm-2" onchange="mudar(this)" id="nomesUsu">
            <option></option>
            @foreach (ProjetoBolao.Models.Usuario u in ViewBag.Usuarios)
            {
                <option>@u.Nome</option>
            }
        </select>
        <br /><br />
        <div class="image">
            <img id="foto" src="~/img/icone.png" />
        </div>
        <br /><br />
        <table class="table table-bordered text-left">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>E-mail</th>
                    <th>Senha</th>
                    <th>Pontos</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="nome">-</td>
                    <td id="idade">-</td>
                    <td id="email">-</td>
                    <td id="senha">-</td>
                    <td id="pontos">-</td>
                </tr>
            </tbody>
        </table>
        <br />
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <label class="navbar-brand">Configurações: </label>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button class="nav-link buttonNav" data-toggle="modal" data-target="#modalNome" data-whatever="nome">alterar nome</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" href="#">alterar e-mail</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" href="#">alterar foto de perfil</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" href="#">alterar senha</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" href="#">alterar pontos</button>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
 </section>
<script>

    mudar = function (usuarios)
    {
        $.post("/Admin/UsuarioJson", { nome: $("#nomesUsu").val() }, function (userSelected) {
            $("#nome").html(userSelected.Nome);
                $("#senha").html(userSelected.Senha);
                $("#email").html(userSelected.Email);
                $("#pontos").html(userSelected.qntsPontos);
                $("#idade").html(userSelected.Idade);
                $("#foto").attr("src", userSelected.Foto);
        });
    }

</script>
