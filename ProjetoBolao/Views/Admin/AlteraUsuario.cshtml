@{
    Layout = "~/Views/Shared/_Perfil.cshtml";

}

<section id="admin">
    <div class="container">
        <br />
        <h1>Alterando usuario.....</h1>
        <a class="nav-link" href="/Admin">&#8630; Voltar</a>
        <br /><br />
        <select class="custom-select my-1 mr-sm-2" onchange="mudar(this)" id="nomesUsu">
            <option></option>
            @foreach (ProjetoBolao.Models.Usuario u in ViewBag.Usuarios)
            {
                <option>@u.Nome</option>
            }
        </select>
        <br /><br />
        <div class="image">
            <img id="foto" src="~/img/icone.png" />
        </div>
        <br /><br />
        <table class="table table-bordered text-left">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>E-mail</th>
                    <th>Senha</th>
                    <th>Pontos</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="nome">-</td>
                    <td id="idade">-</td>
                    <td id="email">-</td>
                    <td id="senha">-</td>
                    <td id="pontos">-</td>
                </tr>
            </tbody>
        </table>
        <br />
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <label class="navbar-brand">Configurações: </label>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button class="nav-link buttonNav" type="button" href="#" id="myBtn">alterar nome</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" type="button" href="#" id="myBtn2">alterar e-mail</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" type="button" href="#" id="myBtn3">alterar foto de perfil</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" type="button" href="#" id="myBtn1">alterar senha</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link buttonNav" type="button" href="#" id="myBtn4">alterar pontos</button>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="modal fade" id="myModal3" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <h4><span class="glyphicon glyphicon-pencil"></span> Foto de Perfil</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form role="form" method="post" action="/Admin/AlteraFoto" enctype="multipart/form-data">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="custom-file">
                                        <input type="hidden" name="u.Email" value="" id="userEmail1" />
                                        <input type="file" name="upload" class="custom-file-input" id="inputGroupFile01"
                                               aria-describedby="inputGroupFileAddon01">
                                        <label class="custom-file-label" for="inputGroupFile01">Escolha um arquivo</label>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok"></span> Alterar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal2" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">

                        <h4><span class="glyphicon glyphicon-pencil"></span> Alterar Email</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form action="/Admin/AlteraEmail">
                            <div class="form-group">
                                <input type="hidden" name="u.Nome" value="" id="userNome" />
                                <label for="usrname"><span class="glyphicon glyphicon-tags"></span> Novo email</label>
                                <input type="text" class="form-control" name="u.Email" placeholder="Email" id="email">
                            </div>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok"></span> Alterar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
                    </div>
                </div>

            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal1" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">

                        <h4><span class="glyphicon glyphicon-pencil"></span> Alterar Senha</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form action="/Admin/AlteraSenha">
                            <div class="form-group">
                                <input type="hidden" name="u.Email" value="" id="userEmail3" />
                                <label for="usrname"><span class="glyphicon glyphicon-lock"></span> Nova senha</label>
                                <input type="text" class="form-control" name="u.Senha" id="usrname" placeholder="Senha">
                            </div>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok"></span> Alterar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
                    </div>
                </div>

            </div>
        </div>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">

                        <h4><span class="glyphicon glyphicon-pencil"></span> Alterar Nome</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form action="/Admin/AlteraNome">
                            <div class="form-group">
                                <input type="hidden" name="u.Email" value="" id="userEmail4" />
                                <label for="usrname"><span class="glyphicon glyphicon-user"></span> Novo nome</label>
                                <input type="text" class="form-control" name="u.Nome" id="usrname" placeholder="Nome">
                            </div>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok"></span> Alterar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
                    </div>
                </div>

            </div>
        </div>
        <div class="modal fade" id="myModal4" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">

                        <h4><span class="glyphicon glyphicon-pencil"></span> Alterar Pontos</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form action="/Admin/AlteraPontos">
                            <div class="form-group">
                                <input type="hidden" name="u.Email" value="" id="userEmail5"/>
                                <label for="usrname">Novo quantidade de pontos</label>
                                <input type="text" class="form-control" name="u.qntsPontos" id="usrname" placeholder="pontuação">
                            </div>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok"></span> Alterar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#myBtn2").click(function () {
                $("#myModal2").modal();
            });
        });

        $(document).ready(function () {
            $("#myBtn3").click(function () {
                $("#myModal3").modal();
            });
        });

        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModal").modal();
            });
        });

        $(document).ready(function () {
            $("#myBtn1").click(function () {
                $("#myModal1").modal();
            });
        });

        $(document).ready(function () {
            $("#myBtn4").click(function () {
                $("#myModal4").modal();
            });
        });

        mudar = function (usuarios) {
            $.post("/Admin/UsuarioJson", { nome: $("#nomesUsu").val() }, function (userSelected) {
                $("#nome").html(userSelected.Nome);
                $("#senha").html(userSelected.Senha);
                $("#email").html(userSelected.Email);
                $("#pontos").html(userSelected.qntsPontos);
                $("#idade").html(userSelected.Idade);
                $("#foto").attr("src", userSelected.Foto);
                $("#userEmail1").val(userSelected.Email);
                $("#userNome").val(userSelected.Email);
                $("#userEmail3").val(userSelected.Email);
                $("#userEmail4").val(userSelected.Email);
                $("#userEmail5").val(userSelected.Email);
            });
        }

    </script>
</section>
