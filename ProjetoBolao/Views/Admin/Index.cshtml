@{
    Layout = "~/Views/Shared/_Perfil.cshtml";

    ProjetoBolao.Models.Usuario u = ViewBag.Usuario;
    string senha = "";
    foreach (char c in u.Senha)
    {
        senha += "•";
    }
}

<section id="admin">
    <div class="container">
        <h1>Admin :</h1>
        <div class="image">
            <img src="@u.Foto" />
        </div>
        <br /><br />
        <table class="table table-bordered text-left">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>E-mail</th>
                    <th>Senha</th>
                    <th>Pontos</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@u.Nome</td>
                    <td>@u.Idade</td>
                    <td>@u.Email</td>
                    <td>@senha</td>
                    <td>@u.qntsPontos</td>
                </tr>
            </tbody>
        </table>
        <br />
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <label class="navbar-brand">Configurações: </label>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <form action="/Admin/AdicionaJogo">
                            <button class="nav-link buttonNav" type="submit">adicionar jogo</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/Admin/AdicionaResultado">
                            <button class="nav-link buttonNav" type="submit">adicionar resultado</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form  action="/Admin/AdicionaTime">
                            <button class="nav-link buttonNav" type="submit">altera time</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/Admin/AlteraUsuario">
                            <button class="nav-link buttonNav" type="submit">alterar usuario</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form>
                            <button class="nav-link buttonNav" href="#">alterar foto de perfil</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form>
                            <button class="nav-link buttonNav" href="#">alterar senha</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
