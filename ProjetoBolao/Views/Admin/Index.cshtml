@{
    Layout = "~/Views/Shared/_Perfil.cshtml";

    ProjetoBolao.Models.Usuario u = ViewBag.Usuario;
    string senha = "";
    foreach (char c in u.Senha)
    {
        senha += "•";
    }
}

<section id="admin">
    <div class="container">
        <h1>Admin :</h1>
        <div class="image">
            <img src="@u.Foto" />
        </div>
        <br /><br />
        <table class="table table-bordered text-left">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Idade</th>
                    <th>E-mail</th>
                    <th>Senha</th>
                    <th>Pontos</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@u.Nome</td>
                    <td>@u.Idade</td>
                    <td>@u.Email</td>
                    <td>@senha</td>
                    <td>@u.qntsPontos</td>
                </tr>
            </tbody>
        </table>
        <br />
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <label class="navbar-brand">Configurações: </label>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <form action="/Admin/AdicionaJogo">
                            <button class="nav-link buttonNav" type="submit">adicionar jogo</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/Admin/AdicionaResultado">
                            <button class="nav-link buttonNav" type="submit">adicionar resultado</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/Admin/AdicionaTime">
                            <button class="nav-link buttonNav" type="submit">altera time</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form action="/Admin/AlteraUsuario">
                            <button class="nav-link buttonNav" type="submit">alterar usuario</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form>
                            <button class="nav-link buttonNav" href="#" type="button" id="alterarFoto">alterar foto de perfil</button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form>
                            <button class="nav-link buttonNav" href="#" type="button" id="alterarSenha">alterar senha</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <h4><span class="glyphicon glyphicon-pencil"></span> Foto de Perfil</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form role="form">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="inputGroupFile01"
                                               aria-describedby="inputGroupFileAddon01">
                                        <label class="custom-file-label" for="inputGroupFile01">Escolha um arquivo</label>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok"></span> Alterar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal1" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">

                        <h4><span class="glyphicon glyphicon-pencil"></span> Alterar Senha</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form role="form" action="/Admin/AlteraSenha">
                            <input type="hidden" value="@u.Id" name="u.Id"/>
                            <div class="form-group">
                                <label for="usrname"><span class="glyphicon glyphicon-lock"></span> Nova senha</label>
                                <input type="text" class="form-control" name="u.Senha" id="usrname" placeholder="Senha">
                            </div>
                            <button type="submit" class="btn btn-success btn-block"><span class="glyphicon glyphicon-ok"></span> Alterar</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Fechar</button>
                    </div>
                </div>

            </div>
        </div>
        <script>

            $(document).ready(function () {
                $("#alterarFoto").click(function () {
                    $("#myModal").modal();
                });
            });
            $(document).ready(function () {
                $("#alterarSenha").click(function () {
                    $("#myModal1").modal();
                });
            });

        </script>
    </div>
</section>

